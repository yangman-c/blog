<h1>Listing posts--<%= flash[:notice] rescue nil %></h1>


<% @posts.each do |post| %>
    <div>
      <%= link_to post.title, post %><br/>
      <%= post.content %><br/>
      <%= post.start_on %>
    </div>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
